
@{
    ViewBag.Title = "Salida";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="form-horizontal">
    <h4>Salida</h4>
    <hr />

    <form action="/Vehiculo/Salida" method="post">

        <div class="form-group">
            <label class="control-label col-md-2">Placa</label>
            <div class="col-md-10">
                <input type="text" id="placa" name="placa" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tarifa</label>
            <div class="col-md-10">
                <input type="text" id="tarifa" name="tarifa" class="form-control" readonly required />
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Salida</button>
    </form>

</div>

<script>
        $(document).ready(function () {
            // Hacer la llamada a la función REST
            $('#placa').on('input', function () {

                var texto = $(this).val();
                $.ajax({
                    url: '@Url.Action("GetVehiculoInfo", "Vehiculo")', // Ruta de la función REST
                    type: 'GET',
                    data: { placa: texto },
                    dataType: 'json',
                    success: function (data) {
                        // Manejar los datos recibidos
                        $('#tarifa').val(data.tarifa);
                    },
                    error: function (error) {
                        console.error('Error al obtener datos:', error);
                    }
                });

            });


        });
</script>
<br />
<div>
    @Html.ActionLink("Listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
